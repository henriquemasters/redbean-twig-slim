<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>{{ constants.APP_NAME }} &middot; {{ title }}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block styles %}
            <link rel="stylesheet" href="{{ base_url() }}/assets/admin/plugins/fontawesome-free/css/all.min.css" />
            <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
            <link rel="stylesheet" href="{{ base_url() }}/assets/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
            <link rel="stylesheet" href="{{ base_url() }}/assets/admin/css/theme.min.css" />

            <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" />

            <link href="{{ base_url() }}/assets/admin/plugins/pace/pace.min.css" rel="stylesheet" />
            <link href="{{ base_url() }}/assets/admin/css/custom.css" rel="stylesheet" />
        {% endblock %}
    </head>

    <body class="page-loader-1 hold-transition sidebar-mini">
        <div class="wrapper">
            <!--Top bar-->
            <nav class="main-header navbar navbar-expand navbar-dark navbar-pink">
                <ul class="navbar-nav">
                    <li class="nav-item"> <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a> </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"> <a class="nav-link" href="{{ base_url() }}/logout" role="button"> <i class="fas fa-power-off"></i> SAIR </a> </li>
                </ul>
            </nav>

            <!--Side Bar-->
            <aside class="main-sidebar elevation-4 sidebar-dark-maroon">
                <a href="{{ base_url() }}/admin/home" class="brand-link text-center"> <img src="{{ base_url() }}/assets/imgs/icon/apple-icon-60x60.png" alt="{{ constants.APP_NAME }}" /> </a>
                <div class="sidebar">
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image"><img src="{{ ((session.user_auth.photo) ? : base_url() ~ '/assets/admin/images/user-avatar.png') }}" class="img-circle elevation-2" alt="{{ session.user_auth.name|u.truncate(16,' ',false) }}" /></div>
                        <div class="info">
                            <a href="{{ base_url() }}/admin/profile" class="d-block">{{ session.user_auth.name|u.truncate(16,' ',false) }}</a>
                            <small class="text-white">{{ session.user_auth.role.name }}</small>
                        </div>
                    </div>
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-header">FERRAMENTAS</li>

                            {% include 'admin/ui/main-menu.twig' %}
                        </ul>
                    </nav>
                </div>
            </aside>

            <!--Content-->
            <div class="content-wrapper">
                {% block content %}{% endblock %}
            </div>

            <!--Footer-->
            <footer class="main-footer text-xs text-center">
                Copyright &copy; 2020 - {{ 'now'|date('Y') }}. Desenvolvido usando RedBeanPHP + Twig + SlimPHP 3
            </footer>


            <!--Modal-->
            <div class="modal fade" data-backdrop="static" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="modalForm" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title float-left"></h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-wrap"></div>
                    </div>
                </div>
            </div>
        </div>

        {#<div class="container small">
            <div class="row">
                <pre class="col-md-6 pre-scrollable"><code>{{ dump(session) }}</code></pre>
                <pre class="col-md-6 pre-scrollable">
                    <h1 class="h6 font-weight-bold">Allow</h1>
                    <code>{{ dump(session.config.assignments.allow) }}</code>
                    <h1 class="h6 font-weight-bold">Deny</h1>
                    <code>{{ dump(session.config.assignments.deny) }}</code>
                </pre>
            </div>
        </div>#}

        {% block scripts %}
            <script src="{{ base_url() }}/assets/admin/plugins/jquery/jquery.min.js"></script>
            <script src="{{ base_url() }}/assets/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="{{ base_url() }}/assets/admin/plugins/pace/pace.min.js"></script>
            <script src="{{ base_url() }}/assets/admin/js/theme.min.js"></script>
            <script src="{{ base_url() }}/assets/admin/js/main-menu-control.js"></script>
            <script src="{{ base_url() }}/assets/admin/js/localstorage-control.js"></script>
            <!--<script src="../../dist/js/demo.js"></script>-->
        {% endblock %}
    </body>
</html>