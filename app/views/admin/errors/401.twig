{# Herda o Layout do Arquivo template.wig #}
{% extends 'admin/template.twig' %}

{# Adiciona um arquivo de estilo CSS ao template.twig #}
{% block styles %}
    {{ parent() }}
{% endblock %}

{# Corpo/Conteúdo do site #}
{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>{{ title }}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ base_url() }}">Home</a></li>
                        <li class="breadcrumb-item active">{{ title }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <section class="content">
        <div class="error-page">
            <h3 class="headline text-danger"> 401 </h3>

            <div class="error-content pl-4">
                <h5><i class="fas fa-exclamation-triangle text-warning"></i> <b>Oops! Acesso não autorizado.</b></h5>

                <p class="mt-3">
                    Suas credenciais não possuem acesso ao recurso solicitado.
                    Enquanto isso, você pode tentar voltar ao Início clicando no botão abaixo:
                </p>

                <a href="{{ base_url() }}/admin/" class="btn btn-primary btn-block text-white"> <i class="fa fa-home"></i> Voltar para o Início </a>
            </div>
        </div>
    </section>
{% endblock %}

{# Adiciona um arquivo de JS ao template.twig #}
{% block scripts %}
    {{ parent() }}
{% endblock %}