<div class="tab-pane" id="change-password">
    <form id="FormUser" action="{{ base_url() }}/admin/profile/save-newpass" method="post" enctype="multipart/form-data" class="form-horizontal" autocomplete="off">
        <input type="hidden" name="_type" value="user">
        <input type="hidden" name="id" value="{{ session.user_auth.id }}">

        <div class="row">
            <div class="col">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title font-weight-bold"><i class="fa fa-lock"></i> Trocar Senha</h3>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <div id="show_hide_password">
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <input type="password" id="password" name="pass" class="form-control" placeholder="Informe sua nova senha" required="">
                                            <div class="input-group-append toggle-password">
                                                <div class="input-group-text">
                                                    <a href=""><i class="fa fa-eye-slash"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <input type="password" id="confirmpassword" name="confirmpassword" class="form-control" placeholder="Confirme a senha" required="">
                                            <div class="input-group-append toggle-password">
                                                <div class="input-group-text">
                                                    <a href=""><i class="fa fa-eye-slash"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-block btn-lg btn-primary"><i class="fa fa-check"></i> <span>Salvar Alteração</span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>